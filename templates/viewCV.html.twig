{% block main %}

<!-- start table for displaying DVD details -->
<h2>Click a nameto check there cv</h2>

    {# -------- offer button to clear the search,. if a search term is present -------- #}
   
    <table>
    <tr>
        <th> ID </th>
        <th> First-name </th>
        <th> Surname </th>
        <th> Age </th>
       
        
    </tr>

    <!-- ********************* HTML for dvd items ****************** -->
<!--
    //   	0 - 15 - 40 - 55 - 70 - 85 - 100 %age
    // 	      .5   1    2    3    4    5     stars
-->

{% for cv in cvs %}
    <tr>
        <td>{{ cv.id }}</td>
        <td> <a href="/detail&{{ cv.id }}">{{  cv.first }}</a></td>
        <td>{{ cv.surname}}</td>
        <td>{{ cv.age }}</td>
        

        

    </tr>
{% endfor %}

</table>

