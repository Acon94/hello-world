{% extends 'lecturer_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Comments{% endblock %}

{# ------------------------------------------------- #}
{% block indexLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}



	<h1>Post a comment About CV's</h1>


<fieldset>
    <legend>Send us a message to say hi!</legend>

    <form
            method="post"
            action="/processMessageForm"
    >

        <p>
            Your message:
            <br>
            <textarea name="text" cols="40" rows="5" required >{{ message.text }}</textarea>
        </p>

        <p>
            Your name:
            <br>
            <input type="text" name="user" required value="{{ message.user }}">
        </p>

        <input type="hidden" name="id" value="{{ message.id }}">

        <p>
            <input type="submit" value="send message">
        </p>

    </form>
</fieldset>

{% endblock %}
