{% extends 'student_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}View Comments{% endblock %}

{# ------------------------------------------------- #}
{% block messagesLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}


<h1>VIEW COMMENTS </h1>
	
<section>
    <div id="one">
{% for message in messages %}
    <hr>
    
    
        <hr>
        
        <p>
            posted by <strong>{{ message.user }}</strong>
            <br>
            {{ message.timestamp|date("l jS M h:i:s A", "Europe/Dublin" ) }}
        </p>
    
        <blockquote>
            {{ message.text }}
        </blockquote>
    
    
    
    {% else %}
        <p>(no messages found)</p>
    {% endfor %}
    </div>
    
</section>



{% endblock %}
