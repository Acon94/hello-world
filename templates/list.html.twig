{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}List Students{% endblock %}

{# ------------------------------------------------- #}
{% block listLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

<!-- start table for displaying DVD details -->
<h2>Lists of DVDs and their average votes</h2>

    {# -------- offer button to clear the search,. if a search term is present -------- #}
    {% if searchText %}
        <a href="?action=list">(reset search)</a>
    {% endif %}
  




    <table>
    <tr>
        <th> ID </th>
        <th> First-name </th>
        <th> Surname </th>
        <th> Age </th>
        <th> GPA </th>
        <th> Status </th>
        
    </tr>

    <!-- ********************* HTML for dvd items ****************** -->
<!--
    //   	0 - 15 - 40 - 55 - 70 - 85 - 100 %age
    // 	      .5   1    2    3    4    5     stars
-->

{% for cv in cvs %}
    <tr>
        <td>{{ cv.id }}</td>
        <td><a href="/?action=detail&id={{ cv.id }}">{{ cv.first }}</a></td>
        <td>{{ cv.surname}}</td>
        <td>{{ cv.age }}</td>
        <td>{{ cv.gpa }} </td>
        <td>{{ cv.status }}</td>

        

    </tr>
{% endfor %}

</table>

{% endblock %}
