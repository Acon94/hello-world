
{% extends 'lecturer_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}List DVDs page{% endblock %}

{# ------------------------------------------------- #}
{% block listLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

<!-- start table for displaying DVD details -->
<h2>ALL STUDENTS</h2>

    {# -------- offer button to clear the search,. if a search term is present -------- #}
    {% if searchText %}
        <a href="?action=list">(reset search)</a>
    {% endif %}
    

    



    <table>
    <tr>
        <th> ID </th>
        <th> First-name </th>
        <th> Surname </th>
        <th> Age </th>
        <th> GPA </th>
        <th> Status </th>
        
    </tr>

    <!-- ********************* HTML for dvd items ****************** -->
<!--
    //   	0 - 15 - 40 - 55 - 70 - 85 - 100 %age
    // 	      .5   1    2    3    4    5     stars
-->

{% for dvd in dvds %}
    <tr>
        <td>{{ dvd.id }}</td>
        <td>{{ dvd.first }}</td>
        <td>{{ dvd.surname}}</td>
        <td>{{ dvd.age }}</td>
        <td>{{ dvd.gpa }} </td>
        <td>{{ dvd.status }}</td>
        <form
	        action="?action=deleteMessage&id={{dvd.id }}"
	        method="post">
	        <input type="submit" value="(delete)">
	</form>
	
	  <form
	            action="?action=editMessage&id={{ dvd.id }}"
	            method="post">
	        <input type="submit" value="(edit)">
    </form>

        

    </tr>
{% endfor %}

</table>

{% endblock %}
