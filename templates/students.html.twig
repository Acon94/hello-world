
{% extends 'lecturer_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}View Students{% endblock %}

{# ------------------------------------------------- #}
{% block listLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

<!-- start table for displaying DVD details -->
<h2>ALL STUDENTS</h2>

    {# -------- offer button to clear the search,. if a search term is present -------- #}
    {% if searchText %}
        <a href="?action=list">(reset search)</a>
    {% endif %}
    

    



    <table>
    <tr>
        <th> ID </th>
        <th> First-name </th>
        <th> Surname </th>
        <th> Age </th>
        <th> GPA </th>
        <th> Status </th>
        
    </tr>

    <!-- ********************* HTML for dvd items ****************** -->
<!--
    //   	0 - 15 - 40 - 55 - 70 - 85 - 100 %age
    // 	      .5   1    2    3    4    5     stars
-->
<form
	        action="/createStudent"
	        method="post">
	        <input type="submit" value="Create a new Student">
	</form>

{% for dvd in dvds %}
    <tr>
        <td>{{ dvd.id }}</td>
        <td>{{ dvd.first }}</td>
        <td>{{ dvd.surname}}</td>
        <td>{{ dvd.age }}</td>
        <td>{{ dvd.gpa }} </td>
        <td>{{ dvd.status }}</td>
        <td><form
	          action="/editStudent&id={{ dvd.id }}"
	            method="post">
	        <input type="submit" value="(edit)">
    </form></td>
    <td>
        <form
	        action="/deleteStudent&id={{dvd.id }}"
	        method="post">
	        <input type="submit" value="(delete)">
	</form>
    </td>
    <td>
            <form
    	        action="/privateMessage&{{dvd.id }}"
    	        method="post">
    	        <input type="submit" value="send private message">
    	</form>
    </td>
    <td>
    	<form
	    	        action="/employ&{{dvd.id }}"
	    	        method="post">
	    	        <input type="submit" value="Employ">
    	</form>
    </td>
	

        

    </tr>
{% endfor %}

</table>

{% endblock %}
